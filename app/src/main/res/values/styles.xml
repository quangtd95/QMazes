<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bgGame</item>
        <item name="colorPrimaryDark">@color/bgGame</item>
        <item name="colorAccent">@color/bgGame</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name = "NoActionBar" parent = "@android:style/Theme.Holo.Light">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>
    <!--<style name="animationDialog">
        <item name="android:windowEnterAnimation">@anim/view_enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/view_exit_to_bottom</item>
    </style>-->

    <style name="FullHeightDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ImageViewInTextLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:background">@drawable/bg_img_adjustment</item>
    </style>

</resources>
